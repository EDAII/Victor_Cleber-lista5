# Reference main.py
#: import main main
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton

<EDADisplayMore>:
    orientation: "vertical"
    task_name_text_input: task_name
    task_start_text_input: task_start
    task_end_text_input: task_end
    task_list: task_list_view
    padding: 10
    spacing: 10

    BoxLayout:
        pos: 0, root.height - 50
        size_hint_y: None
        height: "40dp"
        Button:
            text: "More tasks"
            on_press:
                # You can define the duration of the change
                # and the direction of the slide
                root.manager.transition.direction = 'right'
                root.manager.transition.duration = 1
                root.manager.current = 'edadisplaymore'
        Button:
            text: "Minimize lateness"
            on_press:
                # You can define the duration of the change
                # and the direction of the slide
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 1
                root.manager.current = 'edadisplayless'

    BoxLayout:
        pos: 0, root.height - 100
        size_hint_y: None
        height: "40dp"

        Label:
            text: "Task Name"
        TextInput:
            id: task_name

        Label:
            text: "Task Start"
        TextInput:
            id: task_start

        Label:
            text: "Task End"
        TextInput:
            id: task_end

    BoxLayout:
        pos: 0, root.height - 150
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Add Task"
            size_hint_x: 15
            on_press: root.add_task()
        Button:
            text: "Show Interval by more tasks"
            size_hint_x: 15
            on_press: root.show_interval_more()


    ListView:
        size_hint_y: .7
        size_hint_x: 1
        id: task_list_view
        adapter:
            ListAdapter(data=["Task Name    -     Start    -     End"], cls=main.TaskListButton)


